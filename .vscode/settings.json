{
    "editor.quickSuggestions": {
        "comments": "off",
        "strings": "off",
        "other": "off"
    },
    // Disable Swift language features to prevent toolchain errors on Windows
    "swift.disable": true,
    "swift.languageServerPath": "",
    "swift.sourcekit-lsp.disable": true,

    // Configure Swift files for basic editing
    "[swift]": {
        "editor.defaultFormatter": null,
        "editor.formatOnSave": false,
        "editor.wordWrap": "on",
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    // File handling
    "files.eol": "\n",
    "files.encoding": "utf8",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // Disable language features that require toolchain
    "editor.semanticHighlighting.enabled": false,
    "editor.inlayHints.enabled": "off",
    "editor.codeLens": false,

    // Terminal configuration for Windows
    "terminal.integrated.defaultProfile.windows": "PowerShell",

    // Search configuration
    "search.exclude": {
        "**/build/**": true,
        "**/*.xcarchive/**": true,
        "**/DerivedData/**": true,
        "**/.git/**": true
    },

    // File watcher exclusions to improve performance
    "files.watcherExclude": {
        "**/build/**": true,
        "**/*.xcarchive/**": true,
        "**/DerivedData/**": true
    }
}
